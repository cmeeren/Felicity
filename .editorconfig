root = true

[*]
charset = utf-8
max_line_length = 120
indent_style = space
indent_size = 2
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{config,*proj,props,xml}]
end_tag_newline = true
self_closing_tag_style = space
ij_xml_space_inside_empty_tag = true

[*.fs]
indent_size = 4
fsharp_multiline_bracket_style = experimental_stroustrup
fsharp_keep_max_number_of_blank_lines = 3
